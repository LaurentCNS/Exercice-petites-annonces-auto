{% extends 'back/base.html.twig' %}

{% block title %}
    Gestion des modèles
{% endblock %}

{% block body %}
    <h1>Liste des modèles</h1>

    <table class="table table-hover">
        <thead class="table-warning">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>{{ model.description }}</td>
                <td>
                    <a href="{{ path('app_model_show', {'id': model.id}) }}">voir</a>
                    <a href="{{ path('app_model_edit', {'id': model.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_model_new') }}">Create new</a>
{% endblock %}
