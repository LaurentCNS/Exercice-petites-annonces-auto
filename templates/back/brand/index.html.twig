{% extends 'back/base.html.twig' %}

{% block title %}
    Gestion Marques
{% endblock %}


{% block body %}
    <h1>Liste des marques</h1>

    <table class="table table-hover">
        <thead class="table-warning">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('app_brand_show', {'id': brand.id}) }}">voir</a>
                    <a href="{{ path('app_brand_edit', {'id': brand.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
