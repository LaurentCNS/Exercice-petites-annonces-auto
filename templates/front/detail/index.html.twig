{% extends 'front/base.html.twig' %}

{% block body %}


    <div class="container">
        <div class="col-md-12 mt-5">
            <div class="text-center">
                <h3>Détail de l'annonce</h3>
            </div>
        </div>
    </div>

    <div id="menuCards" class="mt-5">
        <div class="container">
            <div class="col-md-12">
                <h5>Annonce déposé le {{ annonce.createdAt |date('d/m/Y') }} : {{ annonce.title }}</h5>
                <hr class="mt-0">
                <div class="mt-5 row d-flex justify-content-center text-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-text">Marque: {{ annonce.model.brand.name }}</p>
                                <p class="card-text">Modèle: {{ annonce.model.name }}</p>
                                <p class="card-text">Détails: {{ annonce.model.description }}</p>
                                <p class="card-text">Année de mise en circulation: {{ annonce.producedYear }}</p>
                                <p class="card-text">Kilométrage à ce jour: {{ annonce.mileage }}Km</p>
                                <p class="card-text">Prix: {{ annonce.price }}€</p>
                                <p class="card-text">
                                    {% if annonce.description %}
                                    Description: {{ annonce.description }}</p>
                                    {% else %}
                                    Pas de description renseignée
                                    {% endif %}


                            </div>
                        </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
